{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "commonjs",                    
    "moduleResolution": "node",              
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,
    "declaration": true,                      
    "declarationMap": true,                   
    "emitDeclarationOnly": false,             
    "resolveJsonModule": true,                
    "sourceMap": true                         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
